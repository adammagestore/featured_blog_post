<?xml version="1.0"?>
<odoo>
    <record id="website_blog_view_inherit_view_blog_post_form" model="ir.ui.view">
        <field name="name">website_blog_view_inherit_view_blog_post_form</field>
        <field name="model">blog.post</field>
        <field name="inherit_id" ref="website_blog.view_blog_post_form"></field>
        <field name="arch" type="xml">
        <!-- find field description and add the field
             idea_ids after it -->
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="is_featured" string="Featured Post"/>
            </xpath>
        </field>
    </record>
</odoo>